<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcome_bac"
                    style="@style/welcome_bac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:text="@string/new_passwor"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/fill_in_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/enter_new_p"
                    android:textAppearance="@style/fill_in_you"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Password"
                    android:textAppearance="@style/lablename" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_password_til1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:endIconDrawable="@drawable/pass_toggle"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#292D32"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_password_tiet1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="**********"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textAppearance="@style/hint" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Confirm Password"
                    android:textAppearance="@style/lablename" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_password_til2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:endIconDrawable="@drawable/pass_toggle"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#292D32"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_password_tiet2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="**********"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textAppearance="@style/hint" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/new_password_mb"
                    style="@style/ThemeOverlay.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="71dp"
                    android:enabled="false"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="Log in"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="4dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>