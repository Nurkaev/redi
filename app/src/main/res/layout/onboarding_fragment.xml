<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/onboarding_fragment_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" />

    <TextView
        android:id="@+id/onboarding_fragment_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboarding_fragment_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="53dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="Текст1"
        android:textColor="#0560FA"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/onboarding_fragment_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboarding_fragment_tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="Текст2"
        android:textColor="#3A3A3A"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/onboarding_fragment_btns_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="130dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboarding_fragment_btn1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="#0560FA" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboarding_fragment_btn2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="#0560FA"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_fragment_btn3"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/onboarding_fragment_sign_in_ll"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="#0560FA"
        android:visibility="gone"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/onboarding_fragment_sign_in_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Already have an account?" />

        <TextView
            android:id="@+id/onboarding_fragment_sign_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#0560FA"
            android:layout_marginLeft="1dp"
            android:text="Sign In" />

    </LinearLayout>

</RelativeLayout>