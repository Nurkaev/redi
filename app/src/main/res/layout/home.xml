<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/search_view_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search services"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingTop="9dp"
                android:paddingRight="12dp"
                android:paddingBottom="9dp"
                android:textColorHint="#A7A7A7"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/icon_search"
                app:tint="#A7A7A7" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0560FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/avatar"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Hello Ken!"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  We trust you are having a great time"
                        android:textColor="#CFCFCF"
                        android:textSize="12sp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:icon="@drawable/icon_notification"
                    app:iconSize="24dp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="39dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Special for you"
                android:textColor="#EC8000"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:rotation="180"
                android:src="@drawable/icon_left_arrow"
                app:tint="#EC8000" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/home_hsv"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_hsv_ll"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card1" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card2" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card3" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card4" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="9dp"
            android:layout_weight="1"
            android:text="What would you like to do"
            android:textColor="#0560FA"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="159dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:onClick="customer"
                android:layout_weight="1"
                android:backgroundTint="#F2F2F2"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="26.5dp"
                    android:paddingBottom="26.5dp">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_customer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Customer Care"
                        android:textColor="#0560FA"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Our customer care service line is available from 8 -9pm week days and 9 - 5 weekends - tap to call us today"
                        android:textColor="#3A3A3A"
                        android:textSize="7.4sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="159dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:backgroundTint="#F2F2F2"
                android:onClick="sendAPackage"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="26.5dp"
                    android:paddingBottom="26.5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="33dp"
                        android:src="@drawable/send_a_package" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Send a package"
                        android:textColor="#0560FA"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Request for a driver to pick up or deliver your package for you"
                        android:textColor="#3A3A3A"
                        android:textSize="7.4sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="159dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:backgroundTint="#F2F2F2"
                android:onClick="fund"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="26.5dp"
                    android:paddingBottom="26.5dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="37dp"
                        android:src="@drawable/icon_fund" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Fund your wallet"
                        android:textColor="#0560FA"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="To fund your wallet is as easy as ABC, make use of our fast technology and top-up your wallet today"
                        android:textColor="#3A3A3A"
                        android:textSize="7.4sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="159dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:backgroundTint="#F2F2F2"
                android:onClick="chats"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="26.5dp"
                    android:paddingBottom="26.5dp">

                    <ImageView
                        android:layout_width="34.57dp"
                        android:layout_height="33dp"
                        android:src="@drawable/icon_chats"
                        app:tint="?colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Chats"
                        android:textColor="#0560FA"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Search for available rider within your area"
                        android:textColor="#3A3A3A"
                        android:textSize="7.4sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/main_menu" />

</RelativeLayout>